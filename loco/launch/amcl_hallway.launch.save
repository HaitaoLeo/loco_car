<?xml version="1.0"?>

<launch>

  <include file="$(find loco)/launch/odometry.launch" />

  <node pkg="map_server" type="map_server" name="map_server" args="$(find loco)/maps/hallway.yaml" />

  <node pkg="amcl" type="amcl" name="amcl" output="screen">
    <rosparam>
      scan: scan
      odom_frame_id: odom
      base_frame_id: base_link 
      global_frame_id: map

      min_particles: 100
      max_particles: 500


0

      recovery_alpha_slow: 0.005
      recovery_alpha_fast: 0.1

      update_min_d: 0.2 #0.2
      update_min_a: 0.2 #0.2

      m: diff
      odom_alpha1: 0.4
      odom_alpha2: 0.4

      initial_cov_xx: 0.1
      initial_cov_yy: 0.1
      initial_cov_aa: 0.5

      save_pose_rate: -1

      tf_broadcast: true
    </rosparam>

  </node>

  <!-- node pkg="loco" name="amcl_globalinit" type="amcl_globalinit"/-->

</launch>
