<!--
  Simulate a carlike robot with the teb_local_planner in stage:
  - stage
  - map_server
  - move_base
  - static map
  - amcl
  - rviz view
 -->
<launch>

    <node pkg="base_controller" type="cmd_vel_to_ackermann_drive" name="cmd_vel_to_ackermann_drive"/>


        <!--  ************** Navigation ***************  -->
	<node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
  	  	<rosparam file="$(find loco)/config/carlike/costmap_common_params.yaml" command="load" ns="global_costmap" />
  	 	<rosparam file="$(find loco)/config/carlike/costmap_common_params.yaml" command="load" ns="local_costmap" />
  		<rosparam file="$(find loco)/config/carlike/local_costmap_params.yaml" command="load" />
  		<rosparam file="$(find loco)/config/carlike/global_costmap_params.yaml" command="load" />
  		<rosparam file="$(find loco)/config/carlike/teb_local_planner_params.yaml" command="load" />

		<param name="base_global_planner" value="global_planner/GlobalPlanner" />
		<param name="planner_frequency" value="1.0" />
		<param name="planner_patience" value="5.0" />

		<param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
		<param name="controller_frequency" value="5.0" />
		<param name="controller_patience" value="15.0" />

                <param name="clearing_rotation_allowed" value="false" /> <!-- Our carlike robot is not able to rotate in place -->
	</node>


  <include file="$(find loco)/launch/amcl.launch" />


   <node pkg="rosserial_python" name="rosserial_python" type="serial_node.py">
	<param name="port" value="/dev/ttyACM1" />
   </node>


   <node pkg="rosbag" type="record" name="rosbag_record_main"
     	args="record -a -O /home/ubuntu/catkin_ws/mostrecent.bag"/>


</launch>
